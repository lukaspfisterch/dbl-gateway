{
  "$schema": "./context.schema.json",
  "schema_version": "1",
  "context": {
    "max_refs": 50,
    "empty_refs_policy": "DENY",
    "expand_last_n": 10,
    "allow_execution_refs_for_prompt": true,
    "canonical_sort": "event_index_asc",
    "enforce_scope_bound": true,
    "handle_content_fetch": {
      "allow_handle_content_fetch": false,
      "workbench_resolver_url": "http://127.0.0.1:8080",
      "workbench_auth_bearer_token": "",
      "workbench_fetch_timeout_ms": 1500,
      "workbench_max_bytes": 512000,
      "workbench_admit_kinds": ["extracted_text", "summary"]
    }
  },
  "normalization": {
    "rules": [
      "FILTER_INTENT_ONLY",
      "SCOPE_BOUND",
      "SORT_CANONICAL"
    ],
    "conditional_rules": {
      "EXPAND_THREAD_HISTORY": {
        "trigger": "empty_refs_and_hint",
        "enabled": false
      }
    }
  }
}
